<Page
    x:Class="CreateFolder_wpf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CreateFolder_wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid Margin="-10,0,10,0">
            <Button x:Name="btnfolder" Content="Create Folder" Click="btnfolder_Click"></Button>
            
            <Button x:Name="btnreadfolder" Margin="10,0,0,0" VerticalAlignment="Top" Content="Read Folder" Click="btnreadfolder_Click"></Button>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="200"></TextBlock>
        </Grid>
    </Grid>
</Page>
