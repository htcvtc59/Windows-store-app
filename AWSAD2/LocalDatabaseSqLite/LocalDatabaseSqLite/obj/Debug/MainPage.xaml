                 TextWrapping="Wrap"  Margin="222,118,0,0" Width="235" Height="22" VerticalAlignment="Top" />
        <Button x:ConnectionId='1' x:Name="btnAddNew"                         Content="Add New" Margin="219,164,0,536" />
