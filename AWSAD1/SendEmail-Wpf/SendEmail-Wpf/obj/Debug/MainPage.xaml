<Page
    x:Class="SendEmail_Wpf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SendEmail_Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" Text="From" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFrom" HorizontalAlignment="Left" Margin="110,45,0,0" VerticalAlignment="Top" Height="32" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,91,0,0" TextWrapping="Wrap" Text="To" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTo" HorizontalAlignment="Left" Margin="110,91,0,0" VerticalAlignment="Top" Height="32" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,137,0,0" TextWrapping="Wrap" Text="CC" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCC" HorizontalAlignment="Left" Margin="110,137,0,0" VerticalAlignment="Top" Height="32" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,186,0,0" TextWrapping="Wrap" Text="BCc" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBCc" HorizontalAlignment="Left" Margin="110,186,0,0" VerticalAlignment="Top" Height="32" Width="200"/>


        <TextBlock HorizontalAlignment="Left" Margin="10,247,0,0" TextWrapping="Wrap" Text="Subject" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSubject" HorizontalAlignment="Left" Margin="110,247,0,0" VerticalAlignment="Top" Height="32" Width="200"/>

        <TextBlock HorizontalAlignment="Left" Margin="10,308,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top"/>
        <RichEditBox x:Name="txtMessage" HorizontalAlignment="Left" Margin="110,296,0,0" VerticalAlignment="Top" Height="153" Width="200"/>
        <Button x:ConnectionId='1' x:Name="btnSend"                       Content="Send" HorizontalAlignment="Left" Margin="233,486,0,0" VerticalAlignment="Top"/>
        <Button x:ConnectionId='2' x:Name="btnAttachFile"                             Content="AttachFile" HorizontalAlignment="Left" Margin="107,486,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>

