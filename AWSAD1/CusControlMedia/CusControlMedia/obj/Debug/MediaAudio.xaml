<UserControl
    x:Class="CusControlMedia.MediaAudio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CusControlMedia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:ConnectionId='1' x:Name="btnOpenFile"                           Content="OpenFile" HorizontalAlignment="Center"/>
            <TextBlock x:Name="tbStatus" HorizontalAlignment="Center"  />
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='2' x:Name="btnPlay"                       Content="Play" />
                <Button x:ConnectionId='3' x:Name="btnPause"                        Content="Pause"/>
                <Button x:ConnectionId='4' x:Name="btnStop"                       Content="Stop"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

