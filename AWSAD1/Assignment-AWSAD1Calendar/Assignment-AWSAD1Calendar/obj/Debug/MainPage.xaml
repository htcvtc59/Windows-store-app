        </Grid>
        <Grid Grid.Column="4" Grid.ColumnSpan="10" Grid.RowSpan="14" Background="#FFFFFF">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.RowSpan="1" Grid.ColumnSpan="8"
                    BorderThickness="0,0,0,1" BorderBrush="#A8B3B3" Opacity="0.7"
                    >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid  Grid.Column="4">
                        <Button x:ConnectionId='3'                        x:Name="btnToday" Foreground="#A8B3B3" 
                                HorizontalAlignment="Right" VerticalAlignment="Center" 
                                FontSize="20" Content="Today" 
                                Style="{StaticResource ButtonTemplate}"/>

                    </Grid>
                    <Grid Grid.Column="5">
                        <Button x:ConnectionId='2'                            x:Name="btnEventShow" Foreground="#A8B3B3" 
                                HorizontalAlignment="Left" VerticalAlignment="Center" 
                                FontSize="20" Content="Event" 
                                Style="{StaticResource ButtonTemplate}"/>

                    </Grid>


                </Grid>
            </Border>

            <Grid Grid.Row="1" Grid.RowSpan="9" Grid.ColumnSpan="8"
                  Background="#EEF1F2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay1" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical"  
                                >
                            <TextBlock x:Name="tbcDay1" Text="{Binding Day1}" 
                                        Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="SUN" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>

                </Border>
                <Border Grid.Column="1" Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay2" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical" 
                                >
                            <TextBlock x:Name="tbcDay2" Text="{Binding Day2}" 
                                        Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="MON" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay3" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical" 
                                >
                            <TextBlock x:Name="tbcDay3" Text="{Binding Day3}" 
                                        Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="TUE" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="3" Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay4" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical"  
                                >
                            <TextBlock x:Name="tbcDay4" Text="{Binding Day4}" 
                                        Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="WED" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="4" Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay5" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical" 
                                >
                            <TextBlock x:Name="tbcDay5" Text="{Binding Day5}"  
                                       Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="THU" FontSize="20" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Border Grid.Column="5" Style="{StaticResource BorderDay}">
                    <Border x:Name="borDay6" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical" 
                                >
                            <TextBlock x:Name="tbcDay6" Text="{Binding Day6}"
                                       Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="FRI" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Border>
                <Grid Grid.Column="6">
                    <Border x:Name="borDay7" Style="{StaticResource borDay}">
                        <StackPanel Orientation="Vertical" 
                                >
                            <TextBlock x:Name="tbcDay7" Text="{Binding Day7}" 
                                       Style="{StaticResource StyleMDayN}"/>
                            <TextBlock Text="SAT" Style="{StaticResource StyleMainDay}"/>
                        </StackPanel>
                    </Border>
                </Grid>


            </Grid>


            <!--TODO set BackGround Grid view Item-->

            <Grid x:Name="showEvent" Visibility="Collapsed" Grid.Row="1" Grid.RowSpan="9" 
                  Grid.ColumnSpan="8" >
                <Grid.Resources>
                    <DataTemplate  x:Key="EventDataTemplate" >
                        <StackPanel HorizontalAlignment="Center" >
                            <!--Test-->
                            <Grid Background="#48DD95" Width="250" Height="180">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="TextBlock" x:Key="StyleItemEvent">
                                        <Setter Property="FontSize" Value="16"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="TextAlignment" Value="Center" />
                                    </Style>
                                </Grid.Resources>
                                <Grid >
                                    <TextBlock Text="{Binding NameEvent}" Style="{StaticResource StyleItemEvent}" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DayS}"  Margin="5,0,0,0"  Style="{StaticResource StyleItemEvent}" />
                                        <TextBlock Text="{Binding MonthS}" Margin="5,0,0,0"  Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding YearS}" Margin="5,0,0,0"  Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding HourS}" Margin="5,0,0,0"  Style="{StaticResource StyleItemEvent}" />
                                        <TextBlock Text="{Binding AMPMS}" Margin="5,0,0,0"  Style="{StaticResource StyleItemEvent}"  />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="2">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding DayE}"  Margin="5,0,0,0" Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding MonthE}" Margin="5,0,0,0" Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding YearE}" Margin="5,0,0,0" Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding HourE}" Margin="5,0,0,0" Style="{StaticResource StyleItemEvent}"  />
                                        <TextBlock Text="{Binding AMPME}" Margin="5,0,0,0" Style="{StaticResource StyleItemEvent}"  />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="3" Grid.RowSpan="2">
                                    <TextBlock Text="{Binding Description}" Style="{StaticResource StyleItemEvent}" />
                                </Grid>
                            </Grid>
                            <!--Test-->
                        </StackPanel>
                    </DataTemplate>
                </Grid.Resources>

                <Grid Background="#EEF1F2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <GridView x:ConnectionId='1' x:Name="gridvEvents" 
                   IsItemClickEnabled="True" 
                                                 
                   ItemTemplate="{StaticResource EventDataTemplate}">
                    </GridView>

                </Grid>

            </Grid>


        </Grid>
    </Grid>
</Page>

